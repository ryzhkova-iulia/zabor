.container
	width 100%
	background-color  #f6f6f6
	&_color-white
		background-color #ffffff

.content
	width 100%
	max-width 1200px
	margin 0 auto
	&_padding
		padding 50px 0 50px
	//&_position
	//	position relative


.btn
	border-radius 28px
	border none
	outline none
	background-color  #f4bd0c
	padding 15px 40px
	color  #343434
	font-size 24px
	font-weight bold
	cursor pointer
	&_color-white
		background-color #ffffff
		border 3px solid #f6f6f6

hoverAnimation(time=150ms)
	position relative
	&:after
		content ""
		position absolute
		cursor pointer
		left 0
		top 0
		width 100%
		height 100%
		opacity 0
		transition: all time cubic-bezier(0.250, 0.250, 0.750, 0.750); /* linear */
		transition-timing-function: cubic-bezier(0.250, 0.250, 0.750, 0.750); /* linear */
	&:hover:after
		background-color #000000
		opacity 0.27